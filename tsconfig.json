{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "typeRoots": [
      "./node_modules/@types",
      "node_modules/web-ext-types/"
    ],
    "types": [
      "google-apps-script"
    ]
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.jsx",
    "src/**/*.js",
    "*script.google.com_*.txt"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ]
}
